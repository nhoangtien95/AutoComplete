
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/Auto/jquery.js"></script>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.structure.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.structure.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/Auto/jquery-ui.js"></script>
    <script src="~/Scripts/Auto/jquery-ui.min.js"></script>

    <style>
        .ui-autocomplete .ui-menu-item:hover,
        .ui-autocomplete .ui-menu-item.ui-state-focus {
            background-color: #2ea2cc !important;
            background-image: none;
            color: #fff;
            border: none;
        }

        .ui-menu-item-wrapper:hover {
            background-color: red;
        }
    </style>


    <script>

        $(function () {
            $('#txtS').autocomplete({
                source: '@Url.Action("test","Test")',
                focus: function (event, ui) {
                    $("#txtS").val(ui.item.TenSanPham);
                    return false;
                },
                select: function (event, ui) {
                    $("#txtS").val(ui.item.TenSanPham);

                    return false;
                }
            })
            .data("ui-autocomplete")._renderItem = function (ul, item) {
                return $("<li>")
                  .data("ui-autocomplete-item", item)
                  .append(item.TenSanPham + item.TenHinh)
                  .appendTo(ul);
            };
        });

      
    </script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.TextBox("searchTerm", null, new { id = "txtS" })
    }
</body>
</html>
